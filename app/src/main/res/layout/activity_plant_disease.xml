<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raj.profarmingapp.plantDisease"
    android:background="@color/materialColor">

    <Button
        android:id="@+id/objectButton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:onClick="plantDisease"
        android:text="@string/plant_disease_upload"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/objectButton"
        android:layout_marginTop="102dp"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/plantDisease"/>

</RelativeLayout>
